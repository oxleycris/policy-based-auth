@model PBA.Models.ViewModels.Admin.EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}
<h2>Edit User</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Html.HiddenFor(x => x.User.Id)
            <h4>Some access rights.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="User.BirthDate"></label>
                <input asp-for="User.BirthDate" class="form-control" />
                <span asp-validation-for="User.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.GivenName"></label>
                <input asp-for="User.GivenName" class="form-control" />
                <span asp-validation-for="User.GivenName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.FamilyName"></label>
                <input asp-for="User.FamilyName" class="form-control" />
                <span asp-validation-for="User.FamilyName" class="text-danger"></span>
            </div>

            @for (var i = 0; i < Model.AccessRights.Count; i++)
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.AccessRights[i].Name)
                    @Html.CheckBoxFor(model => model.AccessRights[i].Selected)
                    @Html.LabelFor(model => model.AccessRights[i].Name, Model.AccessRights[i].Name)
                </div>
            }

            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
